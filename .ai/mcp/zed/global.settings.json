{
  "context_servers": {
    "memory": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-memory",
        "--annotation",
        "scope:global",
        "--rm",
        "-v",
        "$HOME/.local/share/mcp/memory/global:/data",
        "mcp/memory"
      ]
    },
    "duckduckgo": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/search/ddg"]
    },
    "sequentialthinking": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/plan/seq"]
    },
    "github": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/git/hub"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<YOUR_TOKEN>"
      }
    },
    "gitlab": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/git/lab"],
      "env": {
        "GITLAB_API_URL": "https://gitlab.com/api/v4",
        "GITLAB_PERSONAL_ACCESS_TOKEN": "op://employee/gitlab/mcp-global/token"
      }
    },
    // "just-search": {
    //   "source": "custom",
    //   "command": "just-mcp",
    //   "args": [
    //     "search",
    //     "--database",
    //     "$HOME/.local/share/mcp/just/global_vector_search.db"
    //   ],
    //   "env": {
    //     "RUST_LOG": "info",
    //     "JUST_MCP_VECTOR_SEARCH": "true",
    //     "JUST_MCP_EMBEDDING_PROVIDER": "local"
    //   }
    // },
    "docker-cli": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--name",
        "mcp-docker-cli",
        "--annotation",
        "scope:global",
        "--rm",
        "docker:cli"
      ]
    },
    "dockerhub": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/docker/hub"],
      "env": {
        "HUB_PAT_TOKEN": "op://employee/docker/mcp-global/token"
      }
    },
    "terraform": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/hashicorps/tf"]
    },
    "docker-atlassian": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/atlassian"],
      "env": {
        "CONFLUENCE_URL": "op://employee/confluence/url",
        "CONFLUENCE_USERNAME": "op://employee/confluence/email",
        "JIRA_URL": "op://employee/jira/url",
        "JIRA_USERNAME": "op://employee/jira/email",
        "CONFLUENCE_API_TOKEN": "op://employee/confluence/mcp-global/token",
        "CONFLUENCE_PERSONAL_TOKEN": "op://employee/confluence/mcp-global/token",
        "JIRA_API_TOKEN": "op://employee/jira/mcp-global/token",
        "JIRA_PERSONAL_TOKEN": "op://employee/jira/mcp-global/token"
      }
    },
    "docs-aws": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/docs/aws"]
    },
    "kubernetes": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/kube"]
    },
    "python-refactoring": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/py/refactor"]
    },
    "curl": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/curl"]
    },
    "prometheus": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/prometheus"],
      "env": {
        "PROMETHEUS_URL": "http://host.docker.internal:9090"
      }
    },
    "simplechecklist": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/search/ddg"]
    },
    "aws-core": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/aws/core"]
    },
    "aws-diagram": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/aws/diagram"]
    },
    "aws-terraform": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/aws/tf"]
    },
    "aws-api": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/aws/api"]
    },
    "aws-cloudtrail": {
      "source": "custom",
      "command": "npx",
      "args": ["mcp-remote", "http://localhost:80/aws/logs"]
    }
  }
}
