{
  "context_servers": {
    "ast-grep": {
      "source": "custom",
      "command": "docker",
      "args": ["run", "-i", "--rm", "-v", "$PROJECT_DIR:/data", "mcp/ast-grep"],
      "env": {
        "PROJECT_DIR": "$PWD"
      }
    },
    "pre-commit": {
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "$PROJECT_DIR:/workspace",
        "ghcr.io/arustydev/mcp:pre-commit"
      ],
      "env": {
        "PROJECT_DIR": "$PWD"
      }
    },
    "just": {
      "source": "custom",
      "command": "just-mcp",
      "args": ["--watch-dir", "/Users/adamsm/code/images/ami-eks"]
    }
  }
}
