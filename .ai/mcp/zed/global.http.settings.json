{
  "context_servers": {
    "memory": {
      "source": "custom",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://mcp.localhost/memory/mcp",
        "--allow-http"
      ]
    },
    "zettelkasten": {
      "source": "custom",
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://mcp.localhost/notes/sse"]
    },
    "simplechecklist": {
      "source": "custom",
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://localhost:8355", "--allow-http"]
    },
    "fastmcp": {
      "source": "http",
      "url": "https://gofastmcp.com/mcp"
    }
