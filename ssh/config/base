# http://man.openbsd.org/OpenBSD-current/man5/ssh_config.5
# https://www.ssh.com/academy/ssh/config
FingerprintHash sha256
EnableSSHKeysign yes
HostbasedAuthentication no
HashKnownHosts yes
# PKCS11Provider /usr/local/lib/opensc-pkcs11.so
PasswordAuthentication no
ChallengeResponseAuthentication no
GSSAPIAuthentication no
GSSAPIDelegateCredentials no
GSSAPIKeyExchange no
GSSAPITrustDNS no
BatchMode no
# SmartcardDevice
CheckHostIP yes
StrictHostKeyChecking no
IdentitiesOnly yes
VisualHostKey yes
UserKnownHostsFile ~/.ssh/known_hosts
UpdateHostKeys
# TunnelDevice
# Tunnel
# SyslogFacility
# SecurityKeyProvider /usr/local/lib/opensc-pkcs11.so
# LogVerbose
# LogLevel

Host *.admz.blvd
    Hostname bfc94374231c.mylabserver.com
    User cloud_user

Host *.rogue.lab
    ProxyCommand sh -c "tsh login --proxy=ctvi.rogue.labs; /usr/bin/nc %h %p"
    User aRustyDev
    Port 22

Host ctvi
    ProxyCommand sh -c "tsh login --proxy=ctvi.rogue.labs; /usr/bin/nc %h %p"
    IdentityFile ~/.tsh/ctvi.rogue.labs
    HostKeyAlias ctvi
    LocalForward 127.0.0.1:8080 127.0.0.1:8080
    ServerAliveInterval 10
    ServerAliveCountMax 3
    SendEnv HELLOWORLD
    Hostname 10.0.0.1
    User aRustyDev
    Port 22

Host irt
    #IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
    IdentityFile ~/.ssh/pubs/irt_dc_ed25519
    User adam.smith.103
    HostName pve01.rogue.lab

# By default, use 1Password agent for all hosts
Host *
    HostbasedAuthentication yes
    AddressFamily inet
    CheckHostIP yes
    IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
