// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    // Themes
    "catppuccin": true,
    "catppuccin-icons": true,
    // Build Tools
    "dockerfile": true,
    "git-firefly": true,
    "make": true,
    "just": true,
    "neocmake": true,
    // Config Langs
    "toml": true,
    "ini": true,
    "rainbow-csv": true,
    "proto": true,
    "python-requirements": true,
    "hyprlang": true,
    "gosum": true,
    "tombi": true,
    "authzed": true,
    "github-actions": true,
    // Querying
    "sql": true,
    "graphql": true,
    // Infrastructure
    "terraform": true,
    "ansible": true,
    "opentofu": true,
    // Templating
    "mustache": true,
    // Software: Compiled
    "zig": true,
    "swift": true,
    "csharp": true,
    "assembly": true,
    "kotlin": true,
    "v": true,
    // Scripting
    "lua": true,
    "powershell": true,
    "nu": true,
    // Software: Functional
    "haskell": true,
    "roc": true,
    "scala": true,
    "scheme": true,
    "fsharp": true,
    // Unordered
    "jsonnet": true,
    "erlang": true,
    "gleam": true,
    "groovy": true,
    "odin": true,
    "slint": true,
    "nim": true,
    "verilog": true,
    "elm": true,
    "qml": true,
    "strace": true,
    "tree-sitter-query": true,
    "tera": true,
    "uiua": true,
    "ical": true,
    "vcard": true,
    "move": true,
    "lean4": false,
    "leptos": true,
    "moonbit": true,
    "sieve": true,
    "typespec": true,
    "grit": true,
    "baml": true,
    "jq": true,
    // "env": false,
    "r": false,
    "basher": true,
    "golangci-lint": true,
    "codebook": true, // REVIEW
    "marksman": true, // REVIEW
    "harper": true, // REVIEW
    "wakatime": true,
    "typos": true, // REVIEW
    "cspell": true,
    "oxc": false, // REVIEW
    "gitlab-ci-ls": true,
    "stylelint": true,
    "relay": true, // REVIEW
    "activitywatch": true, // REVIEW
    "yara": false, // REVIEW
    "ty": true,
    "postgres-language-server": false,
    "tsgo": false,
    "package-swift-lsp": false,
    "pyrefly": true,
    "crates-lsp": true,
    "css-modules-kit": false, // Frontend stuff
    "just-ls": true,
    "ast-grep": true,
    "air": true, // R Formatter
    "design-tokens": true, // Frontend stuff
    "markdownlint": true,
    "postgres-context-server": false,
    "mcp-server-github": true,
    "mcp-server-sequential-thinking": false,
    "browser-tools-context-server": false,
    "mcp-server-gitlab": false,
    "mcp-server-figma": false,
    "mcp-server-supabase": false,
    "mcp-server-buildkite": false,
    "mcp-server-container-use": true,
    "terraform-context-server": false,
    "go-snippets": false,
    "python-snippets": false,
    "rust-snippets": false,
    "sqlc-snippets": false
  },
  "context_servers": {
    "terraform-context-server": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "container-use-mcp": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "surrealdb": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "surrealdb-mcp-server"],
      "env": {
        "SURREALDB_NS": "git-setup-rs",
        "SURREALDB_DB": "git-setup-rs",
        "SURREALDB_USER": "root",
        "SURREALDB_URL": "https://surrealdb-tikv.default.svc.cluster.local:8000",
        "SURREALDB_PASS": "StrongSecretPassword!"
      }
    }
  },
  "ssh_connections": [
    {
      "host": "localhost",
      "username": "developer",
      "port": 2222,
      "args": ["-i", "~/.ssh/zed_test_key"],
      "projects": [
        {
          "paths": ["/home/developer"]
        }
      ]
    }
  ],
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    // A list of globs representing files that edit predictions should be disabled for.
    // There's a sensible default list of globs already included.
    // Any addition to this list will be merged with the default list.
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**talks.md"
    ]
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Catppuccin Macchiato"
  },

  // File Type Associations
  "file_types": {
    "Sieve": ["sieve", "sv", "*.sieve", "*.sv"],
    "Diff": ["dif"]
  },

  // Tree-sitter Configuration (if you want syntax highlighting from your grammar)
  // "tree_sitter": {
  //   // If you've published your tree-sitter grammar or want to use it locally
  //   "grammars": {
  //     "sieve": {
  //       // Path to your compiled tree-sitter grammar
  //       "repository": "https://github.com/yourusername/tree-sitter-sieve",
  //       "rev": "main"

  //       // Alternative: local path if you have the grammar locally
  //       // "path": "/path/to/tree-sitter-sieve"
  //     }
  //   }
  // },
  "languages": {
    // Define Sieve language settings
    "Sieve": {
      // Associate with your custom language server
      "language_servers": ["sieve_lsp"],

      // Editor behavior for Sieve files
      "tab_size": 2,
      "hard_tabs": false,
      "preferred_line_length": 80,

      // Auto-formatting settings
      "format_on_save": "on",
      "formatter": "language_server",

      // Code completion settings
      "show_completions_on_input": true
    }
  },
  "lsp": {
    "sieve_lsp": {
      "binary": {
        // Whether to fetch the binary from the internet, or attempt to find locally.
        "ignore_system_version": false,
        "path": "$HOME/.cargo/bin/sieve_lsp",
        // "arguments": ["--option", "value"],
        // Environment variables for the language server process
        "env": {
          "RUST_LOG": "info" // Set log level (debug, info, warn, error)
        }
      },
      "initialization_options": {
        "proton_extensions": true,
        "strict_mode": false,
        "max_errors": 100,
        "semantic_analysis": true
      }
    }
  }
  // "overrides": [
  //     {
  //         "files": ["tauri.conf.json"],
  //         "options": {
  //             "parser": "json5"
  //         }
  //     }
  // ]
}
