{
  "context_servers": {
    "ast-grep": {
      // "url": "http://tool.localhost/mcp",
      // "headers": {
      //   "X-Service": "ast-grep"
      // }
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/adamsm/code/images/ami-eks:/data",
        "mcp/ast-grep"
      ]
    },
    "task-orchestrator": {
      // "url": "http://tool.localhost/mcp",
      // "headers": {
      //   "X-Service": "tasks"
      // }
      "source": "custom",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-v",
        "/Users/adamsm/code/images/ami-eks:/data",
        "ghcr.io/jpicklyk/task-orchestrator"
      ]
    },
    "justfile": {
      "source": "custom",
      "command": "just-mcp",
      "args": ["--watch-dir", "/Users/adamsm/code/images/ami-eks"]
    },
    "mkdocs": {
      // "url": "http://tool.localhost/mcp",
      // "headers": {
      //   "X-Service": "mkdocs"
      // }
      "source": "custom",
      "command": "npx",
      "args": [
        "-y",
        "@serverless-dna/mkdocs-mcp",
        "$DOCS_SITE",
        "$MKDOCS_MCP_PROMPT"
      ],
      "env": {
        "DOCS_SITE": "http://localhost:8000",
        "MKDOCS_MCP_PROMPT": "You are a documentation assistant that helps users improve their documentation by suggesting enhancements, identifying gaps, and providing clear explanations. Analyze the provided documentation site and offer actionable recommendations to enhance its clarity, completeness, and overall quality."
      }
    },
    "mkdocs-serve": {
      "source": "custom",
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "$PROJECT_DIR",
        "mkdocs-mcp",
        "-mt",
        "stdio"
      ],
      "env": {
        "PROJECT_DIR": "/Users/adamsm/code/docs/internal"
      }
    },
    "sketch": {
      // "url": "http://tool.localhost/mcp",
      // "headers": {
      //   "X-Service": "sketch"
      // }
      "url": "http://localhost:31126/mcp"
    },
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=/Users/username/Desktop,dst=/projects/Desktop",
        "mcp/filesystem",
        "/projects"
      ],
      "git": {
        "command": "uvx",
        "args": ["mcp-server-git", "--repository", "/path/to/repo"]
      }
    }
  }
}
